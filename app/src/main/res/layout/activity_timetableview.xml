<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".timetableview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure Repeat Subjects"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Container for dynamically adding subject and class spinners -->
            <LinearLayout
                android:id="@+id/repeatSubjectsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Button to add subjects and classes -->
            <Button
                android:id="@+id/addSubjectsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Timetable"
                android:layout_marginTop="16dp"/>

            <!-- Table layout for displaying timetable -->
            <TableLayout
                android:id="@+id/timetableTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginTop="16dp"
                android:showDividers="middle"
                android:divider="@drawable/table_divider">
                <!-- Table rows will be dynamically added here -->
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Total Hours TextView -->
    <TextView
        android:id="@+id/totalHoursTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Hours: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"/>
</LinearLayout>
